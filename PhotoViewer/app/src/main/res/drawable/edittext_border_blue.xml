<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 흰색 배경 -->
    <solid android:color="#FFFFFF" />

    <!-- 남색 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#2C3E50" />

    <!-- 살짝 둥근 모서리 -->
    <corners android:radius="10dp" />

    <!-- 내부 여백 -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
